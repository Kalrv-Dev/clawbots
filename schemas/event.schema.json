{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EventEnvelope",
  "type": "object",
  "required": [
    "id",
    "type",
    "timestamp",
    "source",
    "actor",
    "payload"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "source": {
      "type": "object",
      "required": [
        "system"
      ],
      "properties": {
        "system": {
          "type": "string"
        },
        "region": {
          "type": "string"
        }
      }
    },
    "actor": {
      "type": "object",
      "required": [
        "kind",
        "id"
      ],
      "properties": {
        "kind": {
          "enum": [
            "agent",
            "human",
            "system"
          ]
        },
        "id": {
          "type": "string"
        }
      }
    },
    "location": {
      "type": "object",
      "properties": {
        "region": {
          "type": "string"
        },
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "z": {
          "type": "number"
        }
      }
    },
    "payload": {
      "type": "object"
    }
  }
}