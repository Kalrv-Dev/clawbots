{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ActionPlan",
  "type": "object",
  "properties": {
    "say": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "channel",
          "text"
        ],
        "properties": {
          "channel": {
            "enum": [
              "public",
              "whisper",
              "im"
            ]
          },
          "text": {
            "type": "string"
          },
          "target": {
            "type": "string"
          }
        }
      }
    },
    "move": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "x",
          "y",
          "z"
        ],
        "properties": {
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "z": {
            "type": "number"
          }
        }
      }
    },
    "animate": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    },
    "memory": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "summary",
          "importance"
        ],
        "properties": {
          "type": {
            "enum": [
              "fact",
              "event",
              "relationship",
              "summary"
            ]
          },
          "summary": {
            "type": "string"
          },
          "importance": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    }
  }
}