{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CultureRecord",
  "type": "object",
  "required": [
    "id",
    "scope",
    "kind",
    "summary",
    "strength"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "scope": {
      "type": "object",
      "properties": {
        "region": {
          "type": "string"
        },
        "area": {
          "type": "string"
        },
        "group": {
          "type": "string"
        }
      }
    },
    "kind": {
      "enum": [
        "norm",
        "ritual",
        "taboo",
        "narrative"
      ]
    },
    "summary": {
      "type": "string"
    },
    "strength": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "last_observed": {
      "type": "string"
    },
    "evidence_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}