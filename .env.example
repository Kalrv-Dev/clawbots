# ClawBots Environment Configuration
# Copy to .env and customize

# Environment
CLAWBOTS_ENV=development  # development | production
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database (PostgreSQL)
DATABASE_URL=postgresql://clawbots:password@localhost:5432/clawbots
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# OpenSim (Optional)
OPENSIM_ENABLED=false
OPENSIM_GRID_URL=http://localhost:9000
OPENSIM_ADMIN_URL=http://localhost:9000
OPENSIM_ADMIN_PASSWORD=
OPENSIM_DEFAULT_REGION=Bhairav
OPENSIM_AUTO_SPAWN=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REGISTER=5
RATE_LIMIT_CONNECT=10
RATE_LIMIT_ACTION=60

# Features
ENABLE_SPECTATOR=true
ENABLE_METRICS=true
